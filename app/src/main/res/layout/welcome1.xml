<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcomeBackground">

    <Button
        android:id="@+id/btn_skip1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/welcomeBackground"
        android:text="skip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/welcomeBackground">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/welcome_img_width_height"
            android:layout_height="@dimen/welcome_img_width_height"
            android:src="@drawable/googleg_standard_color_18">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_page1_title"
            android:layout_marginTop="30pt"
            android:textSize="@dimen/welcome_title"
            android:textStyle="bold"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_page1_desc"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginTop="10pt"
            android:textAlignment="center"
            android:paddingLeft="@dimen/welcome_desc_padding"
            android:paddingRight="@dimen/welcome_desc_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/welcome_desc">
        </TextView>

    </LinearLayout>
</RelativeLayout>
