<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Tab.MainTab1"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txt_tab1_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:textColor="@color/welcomeBackground"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/txt_tab1_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tab1_main"
        android:text="예약 내역이 없습니다."
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
    
    <ImageButton
        android:id="@+id/btn_tab1_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/main_arrow"
        android:scaleType="centerInside"
        android:background="@color/transfer"
        android:layout_marginBottom="120dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:layout_marginBottom="16dp"
        android:text="@string/copyright"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약상세"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_tab1_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>