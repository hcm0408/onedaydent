<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context=".Main.Fragment.ShowHallFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_showhalllayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_showhall1"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료시간 안내"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center">

        </TextView>

        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_showhall1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안내를 원하시는 관을 터치해주세요"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_showhall1"
                android:background="@drawable/hall1"
                android:layout_weight="1"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="1관"
                android:textSize="22sp">
            </TextView>

            <TextView
                android:layout_weight="1"
                android:background="@drawable/hall2"
                android:id="@+id/btn_showhall2"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="2관"
                android:textSize="22sp">
            </TextView>

            <TextView
                android:layout_weight="1"
                android:background="@drawable/hall3"
                android:id="@+id/btn_showhall3"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="3관"
                android:textSize="22sp">
            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>